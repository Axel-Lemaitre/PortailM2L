extends ../layout

block append body

    style.
        th, td {
            padding: 10px;
        }

        table, select {
            width: 100%;
        }

    .container.theme-showcase(role='main')



        .page-header
            h3 Saisir une prestation d'affranchissement:

        .jumbotron
            form(method='POST' action='affranchissements')
                div.form-group
                    label Nom de la ligue:
                    br
                    select
                        each laLigue in listLigue
                            option(value= laLigue.id, name='idligue') #{laLigue.nom}

                div.form-group
                    label Type d'affranchissement:
                    br
                    select
                        each leTypeAffr in typeAffr
                            option(value= leTypeAffr.id, name='idTypeAffr') #{leTypeAffr.libelle}

                div.form-group
                    label Quantité d'affranchissements:
                    br
                    input#qteAffr.form-control(type='int', placeholder="Quantité d'affranchissement" name='qteAffr')

                div.form-group
                    button.btn.btn-primary(type='submit') Valider